<div class="page-header">
  <h1>
    User leagues
    <a href="/user_leagues/new" class="btn btn-lg btn-success">New User league</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>League</th>
        <th>Commissioner</th>
        <th>Selected contestants</th>
        <th>Point total</th>
        <th>Points last week</th>
        <th>League locked</th>
        <th>Extra1</th>
        <th>Extra2</th>
        <th>Actions</th>
      </tr>

      <% @user_leagues.each do |user_league| %>
      <tr>
        <td><%= user_league.user_id %></td>
        <td><%= user_league.league_id %></td>
        <td><%= user_league.commissioner %></td>
        <td><%= user_league.selected_contestants %></td>
        <td><%= user_league.point_total %></td>
        <td><%= user_league.points_last_week %></td>
        <td><%= user_league.league_locked %></td>
        <td><%= user_league.extra1 %></td>
        <td><%= user_league.extra2 %></td>
        <td>
          <a href="/user_leagues/<%= user_league.id %>" class="btn btn-primary">Show</a>
          <a href="/user_leagues/<%= user_league.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_user_league/<%= user_league.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
