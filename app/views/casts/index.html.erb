<div class="page-header">
  <h1>
    Casts
    <a href="/casts/new" class="btn btn-lg btn-success">New Cast</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Bio</th>
        <th>Image</th>
        <th>Points</th>
        <th>Extra1</th>
        <th>Extra2</th>
        <th>Actions</th>
      </tr>

      <% @casts.each do |cast| %>
      <tr>
        <td><%= cast.name %></td>
        <td><%= cast.bio %></td>
        <td><%= cast.image %></td>
        <td><%= cast.points %></td>
        <td><%= cast.extra1 %></td>
        <td><%= cast.extra2 %></td>
        <td>
          <a href="/casts/<%= cast.id %>" class="btn btn-primary">Show</a>
          <a href="/casts/<%= cast.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_cast/<%= cast.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
